<!-- PRODUTOS PROMOCIONAIS -->
<section class="products-section">
    <div class="container">
        <div class="section-header">
            <h2>Ofertas Especiais</h2>
            <p>Aproveite os melhores preços</p>
        </div>

        <div class="products-slider">
            <button class="slider-btn prev" onclick="slideProducts('promo', -1)">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="products-container" id="promo-products">
                <% listaProduct.forEach((produto) => { %>
                    <% if(contador < limite) { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="<%= produto.proImagem %>"
                                    alt="Ofertas">
                            </div>
                            <div class="product-info">
                                <h3><%= produto.proNome %></h3>
                                <p class="product-price">
                                    <%= Number(produto.proPreco).toLocaleString("pt-BR", {
                                        style: "currency",
                                        currency: "BRL"
                                    }) %>
                                </p>
                                <p class="product-installment">
                                    ou 12x de  
                                    <% let precoQuebrado =+ produto.proPreco / 12; %>

                                    <%= Number(precoQuebrado).toLocaleString("pt-BR", {
                                        style: "currency",
                                        currency: "BRL"
                                    }) %>
                                    sem juros
                                </p>
                                <a href="/shopProduct/<%= produto.proID %>" class="btn-buy">
                                    <i class="fas fa-shopping-cart"></i>
                                    Comprar
                                </a>
                            </div>
                        </div>
                        <% contador++; %>
                    <% } %>
                <% }) %>
            </div>
            <button class="slider-btn next" onclick="slideProducts('promo', 1)">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</section>


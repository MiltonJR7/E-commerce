<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Layout - Dashboard</title>
    <link rel="stylesheet" href="/css/dashStyle.css">
    <link rel="stylesheet" href="/css/perfilDash.css">
    <link rel="stylesheet" href="/css/perfilDash.css">
    <link rel="stylesheet" href="/css/productStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body data-theme="light">
    <header class="header">
        <div class="top-bar">
            <div class="top-bar-content">
                <span class="top-bar-text">Área administrativa</span>
            </div>
        </div>

        <div class="header-main">
            <div class="header-content">
                <div class="logo">
                    <span class="logo-text">Dashboard</span>
                </div>

                <button class="mobile-menu-toggle" id="menu-toggle" aria-label="Menu">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </header>

    <aside class="sidebar">
        <nav class="sidebar-nav">
            <a href="/dashboard" class="nav-item users" id="users">
                <i class="fa fa-user" aria-hidden="true"></i>
                <span>Usuários</span>
            </a>
            <a href="/dashboard/address" class="nav-item address" id="endereco">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <span>Endereços</span>
            </a>
            <a href="/dashboard/products" class="nav-item products" id="produtos">
                <i class="fa fa-cubes" aria-hidden="true"></i>
                <span>Produtos</span>
            </a>
            <a href="/" class="nav-item">
                <i class="fa fa-home" aria-hidden="true"></i>
                <span>Home</span>
            </a>
        </nav>

        <div class="theme-toggle">
            <label class="toggle-label">
                <input type="checkbox" id="theme-checkbox">
                <span class="toggle-slider"></span>
                <span class="toggle-text">Tema Escuro</span>
            </label>
        </div>
    </aside>

    <%- body %>

    
</body>
</html>

<script src="/js/theme.js"></script>
<script src="/js/delete.js"></script>
<script src="/js/alterarDash.js"></script>
<script src="/js/menu.js"></script>
<script src="/js/script.js"></script>
<script src="/js/apiViacep.js"></script>
<script src="/js/register.js"></script>
<script src="/js/demarcarRotas.js"></script>
<script src="/js/adicionarProdutos.js"></script>
